set nocompatible
set number " turns on line numbers
set wrap " make wrapping on words rather than characters
set linebreak
filetype indent plugin on
syntax on " syntx highlighting
set autoread " recognize when a file has changed outside vim
set cursorline
set hidden
inoremap ii <esc>
set wildmenu
set wildmode=longest,list
set showcmd
set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set ruler
set confirm
set mouse=a
set cmdheight=2
